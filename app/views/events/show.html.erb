<p id="notice"><%= notice %></p>
<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags always come first -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>DYNOS</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.5/css/bootstrap.min.css" integrity="sha384-AysaV+vQoT3kOAXZkl02PThvDr8HYKPZhNT5h/CXfBThSRXQ6jW5DO2ekP5ViFdi" crossorigin="anonymous">
    <link rel="stylesheet" href="css/show_event.css">
  </head>
  <body>
    
    <div class="container-fluid flex flex-col">
      <div class="row header">
      </div> <!-- Header --> 
      <div class="row contant">
        <div class="container">
          <div class="event-header">
            <div class="event-info col-md-10 offset-md-1">
              <h2 class="title">Event By</h2>
              <h2 class="school-name">
                <a href="#" class="school-name">
                  Lorem Ipsum is simply dummy text of the printing and typesetting industry.</h2>
                </a>
                <h2 class="school-name"><%= @event.name %></h2>
              <p class="leads">
                <%= @event.description %>
              </p>
            </div>
          </div>
          <div class="col-md-10 offset-md-1 my-3">
            <div class="event-details">
              <div class="row age details-row">
                <div class="col-md-2 title-col">Age Group:</div>
                <div class="col-md-7"><%= @event.min_age %>  -  <%= @event.max_age %></div>
              </div>
              <div class="row school-type details-row">
                <div class="col-md-2 title-col">Location:</div>
                <div class="col-md-10"><%= @event.location %></div>
              </div>
              <h2 class="contact row">Date</h2>
              <div class="row contact-row details-row">
                <div class="col-md-2 title-col"><%= @event.start_date %> - <%= @event.end_date %></div>
                <div class="col-md-7"><%= @event.start_time %> - <%= @event.end_time %></div>  
              </div>
              <div class="row contact-row details-row">
                <div class="col-md-2 title-col">Ticket Price:</div>
                <div class="col-md-7">RM<%= @event.price %></div>  
              </div>
              <div class="row contact-row details-row flex">
                <a href="#" class="btn btn-buy">Get Tickets</a>
              </div>
            </div>  
          </div>
          <h2 class="title center">Upcoming Events By The School</h2>
          <div class="col-md-10 offset-md-1">
            <div class="container event-row">
              <div class="event-date col-md-1">
                <h2 class="month">DEC</h2>
                <h3 class="day">18</h3>
              </div>
              <div class="col-md-11">
                <div class="event-desc flex flex-col">
                  <h2 class="title">Lorem Ipsum is simply dummy text of the printing and typesetting industry.</h2>
                  <p class="leads">
                    <strong>Hosted By</strong>
                    <a href="#" class="hosted-by">
                      Lorem Ipsum has been the industry's standard dummy text ever since the 1500s.
                    </a>
                  </p>
                  <div class="event-footer flex">
                    <p class="time-leads">10:00 PM  To  01:00 AM</p>
                    <button class="btn btn-view">View</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div> <!-- School -->
    </div>
    <!-- jQuery first, then Tether, then Bootstrap JS. -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js" integrity="sha384-3ceskX3iaEnIogmQchP8opvBy3Mi7Ce34nWjpBIwVTHfGYWQS9jwHDVRnpKKHJg7" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.3.7/js/tether.min.js" integrity="sha384-XTs3FgkjiBgo8qjEjBk0tGmf3wPrWtA6coPfQDfFEY8AnYJwjalXCiosYRBIBZX8" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.5/js/bootstrap.min.js" integrity="sha384-BLiI7JTZm+JWlgKa0M0kGRpJbF2J8q+qreVrKBC47e3K6BW78kGLrCkeRX6I9RoK" crossorigin="anonymous"></script>
    <script src="https://use.fontawesome.com/0b77101dd2.js"></script>
  </body>
</html>