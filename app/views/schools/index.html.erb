<p id="notice"><%= notice %></p>

<h1>Listing Schools</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Location</th>
      <th>Minimum Age</th>
      <th>Maximum Age</th>
      <th>Category</th>
      <th>Avatar</th>
      <th>Email</th>
      <th>Visited</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>

      <tr>
        <td><%= school.name %></td>
        <td><%= school.description %></td>
        <td><%= school.location %></td>
        <td><%= school.min_age %></td>
         <td><%= school.max_age %></td>
        <td><%= school.category %></td>
        <td><img src="<%= school.avatar %>"></td>
        <td><%= school.email %></td>
        <td><%= school.reviews %></td>
        <td><%= link_to 'Show', school %></td>
        <td><%= link_to 'Edit', edit_school_path(school) %></td>
        <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

