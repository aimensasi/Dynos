<div class="col-md-10 offset-md-1">
  <div class="card">
    <div class="card-block info-card">
      <%= form_tag('/schools', :method => "POST") do %>
        <div class="form-group row">
          <%= label_tag :name, "School Name", :class => "col-sm-2 col-form-label" %>
          <div class="col-sm-8">
            <%= text_field_tag "school[name]", nil, :class => "form-control", :placeholder => "School Name" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :email, "Email Address", :class => "col-sm-2 col-form-label" %>
          <div class="col-sm-8">
            <%= email_field :user, :email, :class => "form-control", :placeholder => "Email Address" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :password, "Password", :class => "col-sm-2 col-form-label" %>
          <div class="col-sm-8">
            <%= password_field :user, :password, :class => "form-control", :placeholder => "Password" %>
          </div>
        </div>
        <div class="form-group row flex btns-group">
          <%= submit_tag "Sign Up", :class => "btn btn-create" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
