<div class="container school-row">
  <div class="school-logo col-md-4">
    <% if  school.avatar.file.nil? %>
      <%= image_tag("http://placehold.it/300x190", :size => "300x190", :alt => "logo") %>
    <% else %>
      <%= image_tag(school.avatar.url, :size => "300x190", :alt => "logo") %>
    <% end %>
  </div>
  <div class="col-md-8">
    <div class="school-desc flex flex-col">
        <h2 class="title"><%= school.name %></h2>
      <div class="age flex">
        <i class="fa fa-child fa-lg" aria-hidden="true"></i>
        <h4><%=school.min_age%> - <%=school.max_age%></h4>
      </div>
      <%= link_to("View", school_path(school), :class => "btn btn-view") %>
    </div>
  </div>
</div>